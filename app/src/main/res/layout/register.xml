<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_blue"
    android:paddingTop="26dp"
    tools:context=".RegisterExpenseActivity">

    <!-- Back Button -->
    <ImageButton
        android:id="@+id/return_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="26dp"
        android:background="@android:color/transparent"
        android:src="@drawable/icon_return"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Page Title -->
    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Register Income / Expense"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Top Section: Type + Total -->
    <LinearLayout
        android:id="@+id/value_input_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:orientation="vertical"
        android:paddingStart="40dp"
        android:paddingEnd="40dp"
        app:layout_constraintTop_toBottomOf="@+id/return_button">

        <!-- Type Selection -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Type"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/type_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:background="@drawable/component_input"
            android:padding="10dp"
            android:spinnerMode="dropdown"
            android:textAlignment="center" />

        <!-- Total Display -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total Balance"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/total_value_field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@drawable/component_input"
            android:hint="R 0.00"
            android:inputType="numberDecimal"
            android:enabled="false"
            android:textColor="@color/black"
            android:textSize="35sp" />
    </LinearLayout>

    <!-- Expense / Income Form -->
    <LinearLayout
        android:id="@+id/expense_form_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:background="@drawable/card_rounded_shape"
        android:orientation="vertical"
        android:paddingLeft="50dp"
        android:paddingTop="50dp"
        android:paddingRight="50dp"
        android:paddingBottom="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/value_input_layout">

        <!-- Name -->
        <EditText
            android:id="@+id/input_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:background="@drawable/component_input"
            android:drawableStart="@drawable/icon_name"
            android:drawablePadding="14dp"
            android:hint="Name"
            android:inputType="text"
            android:textColor="@color/black" />

        <!-- Description -->
        <EditText
            android:id="@+id/input_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:background="@drawable/component_input"
            android:drawableStart="@drawable/icon_description"
            android:drawablePadding="14dp"
            android:hint="Description"
            android:inputType="text"
            android:textColor="@color/black" />

        <!-- Category -->
        <EditText
            android:id="@+id/input_category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:background="@drawable/component_input"
            android:drawableStart="@drawable/icon_category"
            android:drawablePadding="14dp"
            android:hint="Category (e.g. Salary, Rent, Food)"
            android:inputType="text"
            android:textColor="@color/black" />

        <!-- Amount -->
        <EditText
            android:id="@+id/input_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:background="@drawable/component_input"
            android:drawableStart="@drawable/icon_money"
            android:drawablePadding="14dp"
            android:hint="Amount (R)"
            android:inputType="numberDecimal"
            android:textColor="@color/black" />

        <!-- Add Photo -->
        <Button
            android:id="@+id/button_add_photo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:backgroundTint="@color/white"
            android:drawableStart="@drawable/icon_camera"
            android:padding="10dp"
            android:text="Add Photo (Optional)"
            android:textColor="@color/main_blue" />

        <!-- Save Button -->
        <ImageButton
            android:id="@+id/button_add_expense"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:background="@android:color/transparent"
            android:contentDescription="Save Entry"
            android:src="@drawable/icon_add" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
